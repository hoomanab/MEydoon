<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!--  Form -->
        <LinearLayout
            android:id="@+id/addp_product_main"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">



            <!--  Product Name Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:textColor="#372c24"
                android:text="@string/broadcast_message_title"/>
            <EditText
                style="@style/EditText"
                android:id="@+id/txt_broadcast_message_title"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:background="@drawable/btn"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dip"
                android:textColorHint="@color/hint"
                android:hint="تخفیف بهاره"
                android:inputType="text"
                android:textColor="@color/black"
                android:paddingRight="5dip"
                android:maxLength="20"/>


            <!-- Product Description -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:textColor="#372c24"
                android:text="متن اعلان"/>
            <EditText
                android:id="@+id/txt_broadcast_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:isScrollContainer="true"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:lines="5"
                android:background="@drawable/btn"
                android:gravity="right"
                android:textColor="@color/black"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:paddingTop="10dip"/>



        </LinearLayout>
        <!-- Login Form Ends -->

        <!-- Footer Starts -->
        <LinearLayout
            android:id="@+id/sumbit_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dip">


            <!-- Add product Button -->
            <Button
                style="@style/Btn"
                android:id="@+id/btn_broadcast"
                android:text="@string/send"
                android:background="@color/greenSignIn" />

        </LinearLayout>
        <!-- Footer Ends -->

    </LinearLayout>
</LinearLayout>



