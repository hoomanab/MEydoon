<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="50dip"
    android:background="@color/feed_bg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!--  Header Starts
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dip"
            android:paddingBottom="20dip">
             Logo Start
            <ImageView android:src="@drawable/in_app_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>
             Logo Ends
        </LinearLayout>-->
        <!--  Header Ends -->



        <!--  Form -->
        <LinearLayout
            android:id="@+id/addp_product_main"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">


            <!--  Product Picture -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/pic_select"
                android:layout_marginTop="20dip"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dip">

                <ImageButton
                    android:id="@+id/img_add_product_capture"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginRight="5dip"/>
                <ImageButton
                    android:id="@+id/img_add_product_import"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_add_item"/>
            </LinearLayout>

            <!-- image buttons text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_camera"
                    android:layout_marginRight="15dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_gallery"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/img_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />


            <!--  Product Name Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:textColor="#372c24"
                android:text="@string/product_name"/>
            <EditText
                style="@style/EditText"
                android:id="@+id/txt_product_name"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:background="@color/white"
                android:gravity="right"
                android:textColorHint="@color/hint"
                android:inputType="phone"
                android:textColor="@color/black" />


            <!--  Product Category -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/product_category"
                android:layout_marginTop="20dip"/>

            <Spinner
                android:id="@+id/spinner_product_category"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:prompt="@string/product_category"
                android:layout_marginTop="10dip"
                style="@style/EditText"/>


            <!--  Product Price Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/price"
                android:layout_marginTop="20dip"/>
            <EditText
                style="@style/EditText"
                android:id="@+id/product_price"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="textPassword"
                android:password="true"
                android:background="@color/white"
                android:gravity="right"
                android:textColor="@color/black"/>





            <!-- Product Description -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:textColor="#372c24"
                android:text="@string/description"/>
            <EditText
                android:id="@+id/product_description"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginTop="5dip"
                android:isScrollContainer="true"
                android:scrollbars="vertical"
                android:inputType="textLongMessage"
                android:background="@color/white"
                android:gravity="right"
                android:textColor="@color/black"/>



        </LinearLayout>
        <!-- Login Form Ends -->

        <!-- Footer Starts -->
        <LinearLayout
            android:id="@+id/sumbit_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dip">


            <!-- Add product Button -->
            <Button
                style="@style/Btn"
                android:id="@+id/btn_add_product"
                android:text="@string/add_to_shop"
                android:background="@color/greenSignIn"/>

            <!-- Add product Button -->
            <Button
                style="@style/Btn"
                android:id="@+id/btn_abort_add_product"
                android:text="@string/abort"
                android:background="@color/meydoonRed"
                android:layout_marginTop="10dip"/>

        </LinearLayout>
        <!-- Footer Ends -->

    </LinearLayout>
</ScrollView>



