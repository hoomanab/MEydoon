<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/profile_grid_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/grid_image"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_meydoon_tab"/>

            <TextView
                android:id="@+id/grid_product_title"
                android:layout_toLeftOf="@+id/grid_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dip"
                android:text="عنوان محصول"/>


            <TextView
                android:id="@+id/grid_product_register_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid_product_title"
                android:layout_toLeftOf="@+id/grid_image"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="زمان ثبت"/>

            <TextView
                android:id="@+id/grid_price_tag_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/grid_image"
                android:layout_below="@+id/grid_product_register_date"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="قیمت:"/>

            <TextView
                android:id="@+id/grid_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/grid_price_tag_txt"
                android:layout_below="@+id/grid_product_register_date"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="100000"/>

            <TextView
                android:id="@+id/grid_product_price_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/grid_product_price"
                android:layout_below="@+id/grid_product_register_date"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="تومان"/>



            <!-- Feed Footer -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>